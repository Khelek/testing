= form_for @account, html: { class: "form form-horizontal account" } do |f|
  .form-group
    = f.label :balance, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :balance, class: 'form-control', required: true
    = f.error_span(:balance)
  .form-group
    = f.label :currency, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :currency, class: 'form-control', required: true
    = f.error_span(:currency)
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), accounts_path, :class => 'btn btn-default'
