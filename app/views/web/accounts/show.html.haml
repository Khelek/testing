- model_class = Account
.page-header
  %h1= t('.title', default: model_class.model_name.human.titleize)

%p
  %strong= model_class.human_attribute_name(:balance) + ':'
  %br
  = @account.balance
%p
  %strong= model_class.human_attribute_name(:currency) + ':'
  %br
  = @account.currency
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @account.name


= link_to t('form.back'), accounts_path, class: 'btn btn-default'
= link_to t('form.edit'), edit_account_path(@account), class: 'btn btn-default'
= link_to t('form.destroy'), account_path(@account), method: "delete", data: { confirm: t('form.confirm') }, class: 'btn btn-danger'
